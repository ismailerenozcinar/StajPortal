@model List<StajPortal.Models.Entities.JobPosting>
@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<section class="hero-section py-5 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 15px;">
    <div class="container text-center text-white">
        <h1 class="display-4 fw-bold mb-3">
            <i class="fas fa-briefcase me-2"></i>Hayalindeki Stajı Bul
        </h1>
        <p class="lead mb-4">Türkiye'nin en büyük staj platformunda binlerce fırsat seni bekliyor</p>
        
        <!-- Arama Kutusu -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <form asp-controller="Jobs" asp-action="Index" method="get" class="card p-3 shadow-lg border-0">
                    <div class="row g-2">
                        <div class="col-md-5">
                            <input type="text" name="search" class="form-control form-control-lg" placeholder="Pozisyon, departman..." />
                        </div>
                        <div class="col-md-4">
                            <input type="text" name="city" class="form-control form-control-lg" placeholder="Şehir" />
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-search me-1"></i>Ara
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- İstatistikler -->
<section class="stats-section mb-5">
    <div class="row g-4 text-center">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 p-4">
                <div class="mb-3">
                    <i class="fas fa-building fa-3x text-primary"></i>
                </div>
                <h3 class="fw-bold">@ViewBag.TotalCompanies</h3>
                <p class="text-muted mb-0">Aktif Firma</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 p-4">
                <div class="mb-3">
                    <i class="fas fa-briefcase fa-3x text-success"></i>
                </div>
                <h3 class="fw-bold">@ViewBag.TotalJobs</h3>
                <p class="text-muted mb-0">Aktif İlan</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 p-4">
                <div class="mb-3">
                    <i class="fas fa-users fa-3x text-info"></i>
                </div>
                <h3 class="fw-bold">@ViewBag.TotalApplications</h3>
                <p class="text-muted mb-0">Başvuru</p>
            </div>
        </div>
    </div>
</section>

<!-- Son Eklenen İlanlar -->
<section class="jobs-section">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">
            <i class="fas fa-fire text-danger me-2"></i>Son Eklenen İlanlar
        </h2>
        <a asp-controller="Jobs" asp-action="Index" class="btn btn-outline-primary">
            Tümünü Gör <i class="fas fa-arrow-right ms-1"></i>
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var job in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0 hover-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="flex-grow-1 me-2" style="min-width: 0; overflow: hidden;">
                                    <h5 class="card-title fw-bold text-primary mb-1 text-truncate" title="@job.Title">
                                        @job.Title
                                    </h5>
                                    <p class="text-muted mb-0 text-truncate" title="@job.Company.CompanyName">
                                        <i class="fas fa-building me-1"></i>@job.Company.CompanyName
                                    </p>
                                </div>
                                <span class="badge bg-success flex-shrink-0">Aktif</span>
                            </div>
                            
                            <p class="card-text text-muted small mb-3 job-description">
                                @job.Description
                            </p>

                            <div class="d-flex align-items-center text-muted small mb-3">
                                <span class="me-3 text-truncate" style="max-width: 45%;">
                                    <i class="fas fa-map-marker-alt me-1"></i>@job.City
                                </span>
                                <span class="text-truncate" style="max-width: 45%;">
                                    <i class="fas fa-tag me-1"></i>@job.Department
                                </span>
                            </div>

                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id" class="btn btn-primary w-100">
                                    <i class="fas fa-paper-plane me-1"></i>Başvur
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-sign-in-alt me-1"></i>Başvurmak İçin Giriş Yap
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>
            Henüz ilan bulunmamaktadır. İlk ilanı siz ekleyin!
        </div>
    }
</section>

<!-- Nasıl Çalışır -->
<section class="how-it-works mt-5 py-5 bg-light rounded-3">
    <div class="container">
        <h2 class="text-center fw-bold mb-5">
            <i class="fas fa-question-circle me-2"></i>Nasıl Çalışır?
        </h2>
        <div class="row g-4">
            <div class="col-md-3 text-center">
                <div class="mb-3">
                    <i class="fas fa-user-plus fa-3x text-primary"></i>
                </div>
                <h5 class="fw-bold">1. Kayıt Ol</h5>
                <p class="text-muted">Ücretsiz hesap oluştur</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="mb-3">
                    <i class="fas fa-search fa-3x text-success"></i>
                </div>
                <h5 class="fw-bold">2. İlan Ara</h5>
                <p class="text-muted">Sana uygun stajı bul</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="mb-3">
                    <i class="fas fa-paper-plane fa-3x text-info"></i>
                </div>
                <h5 class="fw-bold">3. Başvur</h5>
                <p class="text-muted">Tek tıkla başvur</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="mb-3">
                    <i class="fas fa-check-circle fa-3x text-warning"></i>
                </div>
                <h5 class="fw-bold">4. Stajına Başla</h5>
                <p class="text-muted">Kariyerini başlat</p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <style>
        .hover-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
        }
        .job-description {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
            word-break: break-word;
        }
    </style>
}

