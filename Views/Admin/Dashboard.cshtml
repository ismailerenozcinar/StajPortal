@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold">
                <i class="fas fa-user-shield text-danger me-2"></i>
                Admin Paneli
            </h2>
            <p class="text-muted">Sistem yönetim paneline hoş geldiniz</p>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row g-3 mb-4">
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-users fa-2x opacity-75"></i>
                        <div class="ms-3">
                            <h3 class="mb-0">@ViewBag.TotalUsers</h3>
                            <small>Toplam Kullanıcı</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-0 shadow-sm bg-info text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-user-graduate fa-2x opacity-75"></i>
                        <div class="ms-3">
                            <h3 class="mb-0">@ViewBag.TotalStudents</h3>
                            <small>Öğrenci</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-building fa-2x opacity-75"></i>
                        <div class="ms-3">
                            <h3 class="mb-0">@ViewBag.TotalCompanies</h3>
                            <small>Firma</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-0 shadow-sm bg-secondary text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-briefcase fa-2x opacity-75"></i>
                        <div class="ms-3">
                            <h3 class="mb-0">@ViewBag.TotalJobs</h3>
                            <small>Toplam İlan</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-0 shadow-sm bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-clock fa-2x opacity-75"></i>
                        <div class="ms-3">
                            <h3 class="mb-0">@ViewBag.PendingJobs</h3>
                            <small>Onay Bekleyen</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-0 shadow-sm bg-dark text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-file-alt fa-2x opacity-75"></i>
                        <div class="ms-3">
                            <h3 class="mb-0">@ViewBag.TotalApplications</h3>
                            <small>Başvuru</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı Erişim Menüsü -->
    <div class="row g-4">
        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm border-0 h-100 hover-shadow">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-check-circle fa-4x text-warning"></i>
                    </div>
                    <h5 class="card-title fw-bold">İlan Onayları</h5>
                    <p class="card-text text-muted">Onay bekleyen ilanları görüntüleyin ve onaylayın</p>
                    @if (ViewBag.PendingJobs > 0)
                    {
                        <span class="badge bg-warning text-dark mb-3">@ViewBag.PendingJobs Onay Bekliyor</span>
                    }
                    <div class="d-grid">
                        <a asp-action="JobApprovals" class="btn btn-warning">
                            <i class="fas fa-arrow-right me-2"></i>Onaylamaya Git
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm border-0 h-100 hover-shadow">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-users fa-4x text-primary"></i>
                    </div>
                    <h5 class="card-title fw-bold">Kullanıcılar</h5>
                    <p class="card-text text-muted">Kullanıcıları yönetin ve görüntüleyin</p>
                    <div class="d-grid">
                        <a asp-action="Users" class="btn btn-primary">
                            <i class="fas fa-arrow-right me-2"></i>Kullanıcılara Git
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm border-0 h-100 hover-shadow">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-briefcase fa-4x text-success"></i>
                    </div>
                    <h5 class="card-title fw-bold">Tüm İlanlar</h5>
                    <p class="card-text text-muted">Tüm ilanları görüntüleyin ve yönetin</p>
                    <div class="d-grid">
                        <a asp-action="Jobs" class="btn btn-success">
                            <i class="fas fa-arrow-right me-2"></i>İlanlara Git
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm border-0 h-100 hover-shadow">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-chart-bar fa-4x text-info"></i>
                    </div>
                    <h5 class="card-title fw-bold">Raporlar</h5>
                    <p class="card-text text-muted">İstatistikleri ve raporları görüntüleyin</p>
                    <div class="d-grid">
                        <a asp-action="Reports" class="btn btn-info text-white">
                            <i class="fas fa-arrow-right me-2"></i>Raporlara Git
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-shadow {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

