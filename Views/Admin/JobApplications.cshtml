@model IEnumerable<StajPortal.Models.Entities.Application>
@{
    var job = ViewBag.Job as StajPortal.Models.Entities.JobPosting;
    ViewData["Title"] = $"Başvurular - {job?.Title}";
}

<div class="container-fluid py-4">
    <!-- Başlık ve Breadcrumb -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Dashboard">Admin Panel</a></li>
                    <li class="breadcrumb-item"><a asp-action="Jobs">İlanlar</a></li>
                    <li class="breadcrumb-item active">Başvurular</li>
                </ol>
            </nav>
            <h2 class="fw-bold">
                <i class="fas fa-file-alt text-primary me-2"></i>
                İlan Başvuruları
            </h2>
            <p class="text-muted mb-0">
                <strong>@job?.Title</strong> - @job?.Company?.CompanyName
            </p>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-file-alt fa-2x opacity-75"></i>
                        <div class="ms-3">
                            <h4 class="mb-0">@Model.Count()</h4>
                            <small>Toplam</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-warning text-dark">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-clock fa-2x opacity-75"></i>
                        <div class="ms-3">
                            <h4 class="mb-0">@ViewBag.PendingCount</h4>
                            <small>Bekleyen</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x opacity-75"></i>
                        <div class="ms-3">
                            <h4 class="mb-0">@ViewBag.AcceptedCount</h4>
                            <small>Kabul</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-danger text-white">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-times-circle fa-2x opacity-75"></i>
                        <div class="ms-3">
                            <h4 class="mb-0">@ViewBag.RejectedCount</h4>
                            <small>Ret</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Başvuru Listesi -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Başvurular
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
            <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Öğrenci</th>
                                <th scope="col">E-posta</th>
                                <th scope="col">Üniversite</th>
                                <th scope="col">Bölüm</th>
                                <th scope="col">Başvuru Tarihi</th>
                                <th scope="col">Durum</th>
                                <th scope="col" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var app in Model)
                            {
                                <tr>
                                    <td class="align-middle">
                                        <strong>@app.Student?.FullName</strong>
                                    </td>
                                    <td class="align-middle">
                                        <a href="mailto:@app.Student?.User?.Email" class="text-decoration-none">
                                            @app.Student?.User?.Email
                                        </a>
                                    </td>
                                    <td class="align-middle">
                                        @(app.Student?.University ?? "-")
                                    </td>
                                    <td class="align-middle">
                                        @(app.Student?.Department ?? "-")
                                    </td>
                                    <td class="align-middle">
                                        @app.AppliedAt.ToString("dd.MM.yyyy HH:mm")
                                    </td>
                                    <td class="align-middle">
                                        @if (app.Status == "Accepted")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>Kabul Edildi
                                            </span>
                                        }
                                        else if (app.Status == "Rejected")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times-circle me-1"></i>Reddedildi
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock me-1"></i>Bekliyor
                                            </span>
                                        }
                                    </td>
                                    <td class="align-middle text-center">
                                        @if (app.Status == "Pending")
                                        {
                                            <div class="btn-group" role="group">
                                                <form asp-action="AdminAcceptApplication" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@app.Id" />
                                                    <input type="hidden" name="jobId" value="@job?.Id" />
                                                    <button type="submit" class="btn btn-sm btn-success" title="Kabul Et">
                                                        <i class="fas fa-check me-1"></i>Kabul
                                                    </button>
                                                </form>
                                                <form asp-action="AdminRejectApplication" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@app.Id" />
                                                    <input type="hidden" name="jobId" value="@job?.Id" />
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Reddet">
                                                        <i class="fas fa-times me-1"></i>Reddet
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                        else if (app.Status == "Accepted")
                                        {
                                            <form asp-action="AdminRejectApplication" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@app.Id" />
                                                <input type="hidden" name="jobId" value="@job?.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="İptal Et">
                                                    <i class="fas fa-ban me-1"></i>İptal Et
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">Bu ilana henüz başvuru yapılmamış</h5>
                </div>
            }
        </div>
    </div>

    <!-- Geri Dön -->
    <div class="mt-4">
        <a asp-action="Jobs" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>İlanlara Dön
        </a>
    </div>
</div>
