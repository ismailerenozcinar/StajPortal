@model IEnumerable<StajPortal.Models.Entities.JobPosting>
@{
    ViewData["Title"] = "İlan Yönetimi";
}

<div class="container-fluid py-4">
    <!-- Başlık ve Breadcrumb -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Dashboard">Admin Panel</a></li>
                    <li class="breadcrumb-item active">İlanlar</li>
                </ol>
            </nav>
            <h2 class="fw-bold">
                <i class="fas fa-briefcase text-success me-2"></i>
                İlan Yönetimi
            </h2>
            <p class="text-muted">Sistemdeki tüm ilanları görüntüleyin ve yönetin</p>
        </div>
    </div>

    <!-- Bildirim Mesajları -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- İstatistik Kartları -->
    <div class="row g-3 mb-4">
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-briefcase fa-2x opacity-75"></i>
                        <div class="ms-3">
                            <h4 class="mb-0">@ViewBag.TotalCount</h4>
                            <small>Toplam</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-0 shadow-sm bg-warning text-dark">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-clock fa-2x opacity-75"></i>
                        <div class="ms-3">
                            <h4 class="mb-0">@ViewBag.PendingCount</h4>
                            <small>Bekleyen</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x opacity-75"></i>
                        <div class="ms-3">
                            <h4 class="mb-0">@ViewBag.ApprovedCount</h4>
                            <small>Onaylı</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-0 shadow-sm bg-danger text-white">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-times-circle fa-2x opacity-75"></i>
                        <div class="ms-3">
                            <h4 class="mb-0">@ViewBag.RejectedCount</h4>
                            <small>Reddedilen</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-sm-6">
            <div class="card border-0 shadow-sm bg-info text-white">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-toggle-on fa-2x opacity-75"></i>
                        <div class="ms-3">
                            <h4 class="mb-0">@ViewBag.ActiveCount</h4>
                            <small>Aktif</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtreler -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" asp-action="Jobs">
                <div class="row g-3">
                    <div class="col-md-5">
                        <label class="form-label">
                            <i class="fas fa-search text-muted me-1"></i>Arama
                        </label>
                        <input type="text" name="search" class="form-control" 
                               placeholder="İlan başlığı, firma veya şehir..." 
                               value="@ViewBag.SearchTerm">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">
                            <i class="fas fa-filter text-muted me-1"></i>Onay Durumu
                        </label>
                        <select name="status" class="form-select">
                            <option value="">Tümü</option>
                            <option value="Pending" selected="@(ViewBag.SelectedStatus == "Pending")">Onay Bekliyor</option>
                            <option value="Approved" selected="@(ViewBag.SelectedStatus == "Approved")">Onaylandı</option>
                            <option value="Rejected" selected="@(ViewBag.SelectedStatus == "Rejected")">Reddedildi</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <div class="d-grid gap-2 w-100">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-filter me-1"></i>Filtrele
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- İlan Listesi -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2"></i>İlanlar
                </h5>
                <span class="badge bg-primary">@Model.Count() ilan</span>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">İlan</th>
                                <th scope="col">Firma</th>
                                <th scope="col">Şehir</th>
                                <th scope="col">Onay Durumu</th>
                                <th scope="col">Aktiflik</th>
                                <th scope="col">Tarih</th>
                                <th scope="col" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var job in Model)
                            {
                                <tr>
                                    <td class="align-middle">
                                        <div style="max-width: 250px;">
                                            <strong class="d-block text-truncate" title="@job.Title">@job.Title</strong>
                                            <small class="text-muted">@job.Department</small>
                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        <span class="text-truncate d-inline-block" style="max-width: 150px;" title="@job.Company.CompanyName">
                                            @job.Company.CompanyName
                                        </span>
                                    </td>
                                    <td class="align-middle">
                                        @(job.City ?? "-")
                                    </td>
                                    <td class="align-middle">
                                        @if (job.ApprovalStatus == "Approved")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>Onaylandı
                                            </span>
                                        }
                                        else if (job.ApprovalStatus == "Rejected")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times-circle me-1"></i>Reddedildi
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock me-1"></i>Bekliyor
                                            </span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        @if (job.IsActive)
                                        {
                                            <span class="badge bg-info">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pasif</span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <small>
                                            @job.CreatedAt.ToString("dd.MM.yyyy")
                                        </small>
                                    </td>
                                    <td class="align-middle text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="JobApplications" asp-route-id="@job.Id" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="Başvuruları Gör">
                                                <i class="fas fa-file-alt"></i>
                                            </a>
                                            @if (job.ApprovalStatus == "Pending")
                                            {
                                                <form asp-action="ApproveJob" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@job.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Onayla">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                                <form asp-action="RejectJob" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@job.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Reddet">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </form>
                                            }
                                            <form asp-action="ToggleJobStatus" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@job.Id" />
                                                <button type="submit" 
                                                        class="btn btn-sm @(job.IsActive ? "btn-outline-warning" : "btn-outline-info")" 
                                                        title="@(job.IsActive ? "Pasif Yap" : "Aktif Yap")">
                                                    <i class="fas @(job.IsActive ? "fa-toggle-off" : "fa-toggle-on")"></i>
                                                </button>
                                            </form>
                                            <button type="button" 
                                                    class="btn btn-sm btn-outline-danger" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteModal-@job.Id"
                                                    title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                        
                                        <!-- Delete Modal -->
                                        <div class="modal fade" id="deleteModal-@job.Id" tabindex="-1">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header border-0">
                                                        <h5 class="modal-title">
                                                            <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                                                            İlan Silme
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body text-start">
                                                        <p>
                                                            <strong>@job.Title</strong> ilanını silmek istediğinize emin misiniz?
                                                        </p>
                                                        <div class="alert alert-warning mb-0">
                                                            <i class="fas fa-info-circle me-2"></i>
                                                            Bu işlem geri alınamaz. İlana ait tüm başvurular da silinecektir.
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer border-0">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                                        <form asp-action="AdminDeleteJob" method="post" class="d-inline">
                                                            <input type="hidden" name="id" value="@job.Id" />
                                                            <button type="submit" class="btn btn-danger">
                                                                <i class="fas fa-trash me-1"></i>Sil
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-briefcase fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">İlan Bulunamadı</h5>
                    <p class="text-muted">Filtreleri değiştirerek tekrar deneyin.</p>
                    <a asp-action="Jobs" class="btn btn-outline-primary">
                        <i class="fas fa-redo me-1"></i>Filtreleri Temizle
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .btn-group .btn {
        border-radius: 0.25rem !important;
        margin: 0 1px;
    }
</style>
