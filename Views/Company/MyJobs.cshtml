@model List<StajPortal.Models.Entities.JobPosting>
@{
    ViewData["Title"] = "İlanlarım";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">
                <i class="fas fa-briefcase me-2"></i>İlanlarım
            </h2>
            <p class="text-muted">Toplam @Model.Count ilan</p>
        </div>
        <a asp-action="PostJob" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Yeni İlan Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var job in Model)
            {
                <div class="col-md-6">
                    <div class="card shadow-sm border-0">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="flex-grow-1">
                                    <h5 class="card-title fw-bold mb-1">@job.Title</h5>
                                    <div class="d-flex gap-2 mb-2">
                                        @if (job.ApprovalStatus == "Approved")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>Onaylandı
                                            </span>
                                        }
                                        else if (job.ApprovalStatus == "Rejected")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times-circle me-1"></i>Reddedildi
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock me-1"></i>Onay Bekliyor
                                            </span>
                                        }
                                        
                                        @if (job.IsActive)
                                        {
                                            <span class="badge bg-info">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pasif</span>
                                        }
                                    </div>
                                </div>
                            </div>

                            <p class="text-muted small mb-3">
                                @(job.Description.Length > 100 ? job.Description.Substring(0, 100) + "..." : job.Description)
                            </p>

                            <div class="d-flex align-items-center text-muted small mb-3">
                                <span class="me-3">
                                    <i class="fas fa-map-marker-alt me-1"></i>@job.City
                                </span>
                                <span class="me-3">
                                    <i class="fas fa-tag me-1"></i>@job.Department
                                </span>
                                <span class="ms-auto">
                                    <i class="fas fa-calendar me-1"></i>@job.CreatedAt.ToString("dd/MM/yyyy")
                                </span>
                            </div>

                            <div class="btn-group w-100" role="group">
                                <a asp-action="EditJob" asp-route-id="@job.Id" class="btn btn-outline-primary">
                                    <i class="fas fa-edit me-1"></i>Düzenle
                                </a>
                                @if (job.IsApproved)
                                {
                                    <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id" class="btn btn-outline-info" target="_blank">
                                        <i class="fas fa-eye me-1"></i>Görüntüle
                                    </a>
                                }
                                <form asp-action="DeleteJob" asp-route-id="@job.Id" method="post" class="d-inline" 
                                      onsubmit="return confirm('Bu ilanı silmek istediğinizden emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="fas fa-trash me-1"></i>Sil
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-briefcase fa-5x text-muted mb-3"></i>
            <h4>Henüz ilan eklemediniz</h4>
            <p class="text-muted mb-4">İlk ilanınızı oluşturun ve yetenekli stajyerlerle tanışın!</p>
            <a asp-action="PostJob" class="btn btn-success btn-lg">
                <i class="fas fa-plus me-2"></i>İlk İlanı Ekle
            </a>
        </div>
    }
</div>

