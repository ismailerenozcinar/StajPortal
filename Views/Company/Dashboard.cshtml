@{
    ViewData["Title"] = "Firma Paneli";
}

<div class="container">
    <!-- Başlık -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold">
                <i class="fas fa-building text-primary me-2"></i>
                Firma Paneli
            </h2>
            <p class="text-muted">Hoş geldiniz, @User.Identity?.Name</p>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center p-4">
                <i class="fas fa-briefcase fa-3x text-primary mb-3"></i>
                <h3 class="fw-bold mb-1">@ViewBag.TotalJobs</h3>
                <p class="text-muted mb-0">Toplam İlan</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center p-4">
                <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                <h3 class="fw-bold mb-1">@ViewBag.ActiveJobs</h3>
                <p class="text-muted mb-0">Aktif İlan</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center p-4">
                <i class="fas fa-clock fa-3x text-warning mb-3"></i>
                <h3 class="fw-bold mb-1">@ViewBag.PendingJobs</h3>
                <p class="text-muted mb-0">Onay Bekleyen</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center p-4">
                <i class="fas fa-users fa-3x text-info mb-3"></i>
                <h3 class="fw-bold mb-1">@ViewBag.TotalApplications</h3>
                <p class="text-muted mb-0">Toplam Başvuru</p>
            </div>
        </div>
    </div>

    <!-- Hızlı İşlemler -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 hover-card">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-plus-circle fa-4x text-success"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-3">Yeni İlan Ekle</h5>
                    <p class="card-text text-muted mb-4">Yeni staj ilanı oluşturun ve yayınlayın</p>
                    <a asp-action="PostJob" class="btn btn-success btn-lg w-100">
                        <i class="fas fa-plus me-2"></i>İlan Ekle
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 hover-card">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-list fa-4x text-primary"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-3">İlanlarımı Yönet</h5>
                    <p class="card-text text-muted mb-4">Mevcut ilanlarınızı görüntüleyin ve düzenleyin</p>
                    <a asp-action="MyJobs" class="btn btn-primary btn-lg w-100">
                        <i class="fas fa-briefcase me-2"></i>İlanlarım
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 hover-card">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-file-alt fa-4x text-info"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-3">Başvuruları İncele</h5>
                    <p class="card-text text-muted mb-4">Gelen başvuruları değerlendirin</p>
                    <a asp-action="Applications" class="btn btn-info btn-lg w-100 text-white">
                        <i class="fas fa-users me-2"></i>Başvurular
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .hover-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.2) !important;
        }
    </style>
}

