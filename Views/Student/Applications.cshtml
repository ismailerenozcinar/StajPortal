@model List<StajPortal.Models.Entities.Application>
@{
    ViewData["Title"] = "Başvurularım";
}

<div class="container">
    <div class="mb-4">
        <h2 class="fw-bold">
            <i class="fas fa-file-alt me-2"></i>Başvurularım
        </h2>
        <p class="text-muted">Toplam @Model.Count başvuru</p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var app in Model)
            {
                <div class="col-md-6">
                    <div class="card shadow-sm border-0">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title fw-bold mb-0">@app.JobPosting.Title</h5>
                                @if (app.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Beklemede</span>
                                }
                                else if (app.Status == "Accepted")
                                {
                                    <span class="badge bg-success">Kabul Edildi</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Reddedildi</span>
                                }
                            </div>

                            <p class="text-muted mb-2">
                                <i class="fas fa-building me-1"></i>
                                @app.JobPosting.Company.CompanyName
                            </p>

                            <p class="text-muted small mb-3">
                                @(app.JobPosting.Description.Length > 100 ? 
                                  app.JobPosting.Description.Substring(0, 100) + "..." : 
                                  app.JobPosting.Description)
                            </p>

                            @if (app.Status == "Accepted" && app.ReviewedAt.HasValue)
                            {
                                <div class="alert alert-success py-2 mb-3">
                                    <i class="fas fa-check-circle me-2"></i>
                                    <small>@app.ReviewedAt.Value.ToString("dd/MM/yyyy") tarihinde kabul edildi</small>
                                </div>
                            }
                            else if (app.Status == "Rejected")
                            {
                                <div class="alert alert-danger py-2 mb-3">
                                    <i class="fas fa-times-circle me-2"></i>
                                    <small>
                                        @if (app.ReviewedAt.HasValue)
                                        {
                                            <span>@app.ReviewedAt.Value.ToString("dd/MM/yyyy") tarihinde reddedildi</span>
                                        }
                                        else
                                        {
                                            <span>Başvurunuz reddedildi</span>
                                        }
                                    </small>
                                    @if (!string.IsNullOrEmpty(app.ReviewNote))
                                    {
                                        <br />
                                        <small><strong>Ret Nedeni:</strong> @app.ReviewNote</small>
                                    }
                                </div>
                            }

                            <div class="d-flex justify-content-between align-items-center text-muted small">
                                <span>
                                    <i class="fas fa-calendar me-1"></i>
                                    Başvuru: @app.AppliedAt.ToString("dd/MM/yyyy")
                                </span>
                                <a asp-controller="Jobs" asp-action="Details" asp-route-id="@app.JobPosting.Id" 
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>İlanı Gör
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-inbox fa-5x text-muted mb-3"></i>
            <h4>Henüz başvuru yapmadınız</h4>
            <p class="text-muted mb-4">İlanlar sayfasından size uygun staj ilanlarını keşfedin!</p>
            <a asp-controller="Jobs" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="fas fa-briefcase me-2"></i>İlanları İncele
            </a>
        </div>
    }
</div>

