@model StajPortal.Models.Entities.StudentProfile
@{
    ViewData["Title"] = "Profilim";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <h2 class="fw-bold mb-4">
                        <i class="fas fa-user me-2 text-primary"></i>
                        Öğrenci Profilim
                    </h2>

                    @if (Model == null)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Profil bilgileriniz bulunamadı.
                        </div>
                    }
                    else
                    {
                        <form asp-action="Profile" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="UserId" />

                            <!-- Ad Soyad -->
                            <div class="mb-4">
                                <label asp-for="FullName" class="form-label fw-bold">
                                    <i class="fas fa-user me-1"></i>Ad Soyad *
                                </label>
                                <input asp-for="FullName" class="form-control form-control-lg" required />
                            </div>

                            <!-- Üniversite ve Bölüm -->
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <label asp-for="University" class="form-label fw-bold">
                                        <i class="fas fa-university me-1"></i>Üniversite
                                    </label>
                                    <input asp-for="University" class="form-control" placeholder="Örn: İstanbul Üniversitesi" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Department" class="form-label fw-bold">
                                        <i class="fas fa-graduation-cap me-1"></i>Bölüm
                                    </label>
                                    <input asp-for="Department" class="form-control" placeholder="Örn: Bilgisayar Mühendisliği" />
                                </div>
                            </div>

                            <!-- Mezuniyet Yılı ve GPA -->
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <label asp-for="GraduationYear" class="form-label fw-bold">
                                        <i class="fas fa-calendar me-1"></i>Mezuniyet Yılı
                                    </label>
                                    <input asp-for="GraduationYear" type="number" class="form-control" placeholder="2025" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="GPA" class="form-label fw-bold">
                                        <i class="fas fa-chart-line me-1"></i>GPA / Not Ortalaması
                                    </label>
                                    <input asp-for="GPA" type="number" step="0.01" class="form-control" placeholder="3.50" />
                                </div>
                            </div>

                            <!-- Telefon ve Şehir -->
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <label asp-for="Phone" class="form-label fw-bold">
                                        <i class="fas fa-phone me-1"></i>Telefon
                                    </label>
                                    <input asp-for="Phone" class="form-control" placeholder="0555 555 5555" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="City" class="form-label fw-bold">
                                        <i class="fas fa-map-marker-alt me-1"></i>Şehir
                                    </label>
                                    <input asp-for="City" class="form-control" placeholder="Örn: İstanbul" />
                                </div>
                            </div>

                            <!-- Hakkımda -->
                            <div class="mb-4">
                                <label asp-for="About" class="form-label fw-bold">
                                    <i class="fas fa-info-circle me-1"></i>Hakkımda
                                </label>
                                <textarea asp-for="About" class="form-control" rows="5" 
                                          placeholder="Kendiniz hakkında bilgi verin..."></textarea>
                            </div>

                            <!-- CV Link -->
                            <div class="mb-4">
                                <label asp-for="CVLink" class="form-label fw-bold">
                                    <i class="fas fa-file-pdf me-1"></i>CV Linki
                                </label>
                                <input asp-for="CVLink" class="form-control" placeholder="https://drive.google.com/..." />
                                <small class="text-muted">Google Drive, Dropbox vb. bir link paylaşabilirsiniz.</small>
                            </div>

                            <!-- Butonlar -->
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-save me-2"></i>Profili Güncelle
                                </button>
                                <a asp-action="Dashboard" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>Geri Dön
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

