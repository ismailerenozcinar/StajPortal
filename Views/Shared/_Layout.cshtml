<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"] - Internify</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body class="light-mode">
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" asp-controller="Home" asp-action="Index">
                <i class="fas fa-briefcase me-2"></i>Internify
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i>Ana Sayfa
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Jobs" asp-action="Index">
                            <i class="fas fa-briefcase me-1"></i>İlanlar
                        </a>
                    </li>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        var userRole = User.Claims.FirstOrDefault(c => c.Type == "Role")?.Value ?? "Student";
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-1"></i>@User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                @if (userRole == "Student")
                                {
                                    <li><a class="dropdown-item" asp-controller="Student" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt me-2"></i>Panelim
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Student" asp-action="Profile">
                                        <i class="fas fa-user me-2"></i>Profilim
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Student" asp-action="Applications">
                                        <i class="fas fa-file-alt me-2"></i>Başvurularım
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Messages" asp-action="Inbox">
                                        <i class="fas fa-envelope me-2"></i>Mesajlarım
                                    </a></li>
                                }
                                else if (userRole == "Company")
                                {
                                    <li><a class="dropdown-item" asp-controller="Company" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt me-2"></i>Panelim
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Company" asp-action="PostJob">
                                        <i class="fas fa-plus-circle me-2"></i>İlan Ekle
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Company" asp-action="MyJobs">
                                        <i class="fas fa-briefcase me-2"></i>İlanlarım
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Company" asp-action="Profile">
                                        <i class="fas fa-building me-2"></i>Firma Profilim
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Messages" asp-action="Inbox">
                                        <i class="fas fa-envelope me-2"></i>Mesajlarım
                                    </a></li>
                                }
                                else if (userRole == "Admin")
                                {
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt me-2"></i>Admin Panel
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Messages" asp-action="Inbox">
                                        <i class="fas fa-envelope me-2"></i>Mesajlarım
                                    </a></li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="Logout" class="px-3">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-sign-in-alt me-1"></i>Giriş Yap
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary btn-sm ms-2" asp-controller="Account" asp-action="Register">
                                <i class="fas fa-user-plus me-1"></i>Kayıt Ol
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @if (TempData["Success"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
