@model StajPortal.Models.Entities.JobPosting
@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="row">
        <!-- Ana İçerik -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <!-- Başlık -->
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div class="flex-grow-1 me-3" style="min-width: 0;">
                            <h2 class="fw-bold text-primary" style="word-break: break-word;">@Model.Title</h2>
                            <h5 class="text-muted" style="word-break: break-word;">
                                <i class="fas fa-building me-2"></i>@Model.Company.CompanyName
                            </h5>
                        </div>
                        <span class="badge bg-success fs-6 flex-shrink-0">Aktif</span>
                    </div>

                    <!-- Bilgiler -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                <div>
                                    <small class="text-muted d-block">Lokasyon</small>
                                    <strong>@Model.City</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-tag text-primary me-2"></i>
                                <div>
                                    <small class="text-muted d-block">Departman</small>
                                    <strong>@Model.Department</strong>
                                </div>
                            </div>
                        </div>
                        @if (Model.StartDate.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar-alt text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Başlangıç</small>
                                        <strong>@Model.StartDate.Value.ToString("dd MMMM yyyy")</strong>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (Model.EndDate.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar-check text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Bitiş</small>
                                        <strong>@Model.EndDate.Value.ToString("dd MMMM yyyy")</strong>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <hr class="my-4"/>

                    <!-- Açıklama -->
                    <div>
                        <h4 class="fw-bold mb-3">
                            <i class="fas fa-file-alt me-2"></i>İlan Açıklaması
                        </h4>
                        <p class="text-muted" style="white-space: pre-wrap;">@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Yan Panel -->
        <div class="col-lg-4">
            <!-- Başvuru Kartı -->
            <div class="card shadow-sm border-0 mb-4 sticky-top" style="top: 20px;">
                <div class="card-body p-4 text-center">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (ViewBag.HasApplied == true)
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle me-2"></i>
                                Bu ilana başvurdunuz
                            </div>
                            <a asp-controller="Student" asp-action="Applications" class="btn btn-outline-primary w-100">
                                <i class="fas fa-list me-1"></i>Başvurularım
                            </a>
                        }
                        else
                        {
                            <h5 class="fw-bold mb-3">Başvurmak İster misiniz?</h5>
                            <p class="text-muted small mb-4">CV'niz ve profiliniz firmaya iletilecektir.</p>
                            <form method="post" asp-controller="Student" asp-action="Apply" asp-route-jobId="@Model.Id">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary btn-lg w-100 mb-2">
                                    <i class="fas fa-paper-plane me-2"></i>Başvur
                                </button>
                            </form>
                        }
                    }
                    else
                    {
                        <h5 class="fw-bold mb-3">Başvurmak İçin</h5>
                        <p class="text-muted small mb-4">Giriş yapmanız gerekmektedir</p>
                        <a asp-controller="Account" asp-action="Login" 
                           asp-route-returnUrl="@Url.Action("Details", "Jobs", new { id = Model.Id })" 
                           class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                        </a>
                        <div class="mt-3">
                            <a asp-controller="Account" asp-action="Register" class="text-muted small">
                                Hesabınız yok mu? Kayıt olun
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Firma Bilgileri -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-building me-2"></i>Firma Hakkında
                    </h5>
                    <div class="mb-3">
                        <strong>@Model.Company.CompanyName</strong>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Company.Industry))
                    {
                        <div class="mb-2">
                            <i class="fas fa-industry text-muted me-2"></i>
                            <span class="text-muted">@Model.Company.Industry</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Company.City))
                    {
                        <div class="mb-2">
                            <i class="fas fa-map-marker-alt text-muted me-2"></i>
                            <span class="text-muted">@Model.Company.City</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Company.Website))
                    {
                        <div class="mb-2">
                            <i class="fas fa-globe text-muted me-2"></i>
                            <a href="@Model.Company.Website" target="_blank" class="text-primary">
                                Website
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Geri Dön Butonu -->
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Tüm İlanlar
        </a>
    </div>
</div>

