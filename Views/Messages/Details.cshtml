@model StajPortal.Models.Entities.Message
@{
    ViewData["Title"] = "Mesaj Detayı";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Inbox">Gelen Kutusu</a></li>
                    <li class="breadcrumb-item active">Mesaj Detayı</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-start">
                        <h4 class="mb-0">@(Model.Subject ?? "(Konusuz)")</h4>
                        <div class="btn-group">
                            <a asp-action="Compose" asp-route-replyTo="@Model.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-reply me-1"></i>Yanıtla
                            </a>
                            <form asp-action="Delete" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                        onclick="return confirm('Bu mesajı silmek istediğinize emin misiniz?')">
                                    <i class="fas fa-trash me-1"></i>Sil
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4 pb-3 border-bottom">
                        <i class="fas fa-user-circle fa-3x text-muted me-3"></i>
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <strong>@Model.Sender.FullName</strong>
                                    <span class="text-muted d-block">@Model.Sender.Email</span>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted">@Model.SentAt.ToString("dd MMMM yyyy HH:mm")</small>
                                </div>
                            </div>
                            <div class="mt-2">
                                <small class="text-muted">
                                    <strong>Kime:</strong> @Model.Receiver.FullName (@Model.Receiver.Email)
                                </small>
                            </div>
                        </div>
                    </div>

                    <div class="message-content" style="white-space: pre-wrap; min-height: 150px;">
                        @Model.Content
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Inbox" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Gelen Kutusuna Dön
                </a>
            </div>
        </div>
    </div>
</div>
